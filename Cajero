    private void jbtnAceptarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        // TODO add your handling code here:
         try{
            String o = jtfOpcion.getText();
                int opcion = Integer.parseInt(o);
                
                switch (opcion){
                    case 1:
                        DepositoJFrame deposito = new DepositoJFrame();
                        deposito.show();
                        break;
                    case 2:
                        RetiroJFrame retiro = new RetiroJFrame();
                        retiro.show();
                        break;
                    case 3:
                        SaldoJFrame saldo = new SaldoJFrame();
                        saldo.show();
                        break;
                    case 4:
                        this.dispose();
                        break;
                    default:
                        JOptionPane.showMessageDialog(null, "Opcion no valida");
                        break;
                }
                jtfOpcion.setText("");
                
        } catch(Exception e){  
            JOptionPane.showMessageDialog(null, "Error: " + e);
        }
         
    }                                           

